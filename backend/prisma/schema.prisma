// Prisma Schema for Enrollment and Grading System
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

// Enums
enum UserRole {
  STUDENT
  TEACHING_STAFF
  NON_TEACHING_STAFF
  ADMIN
}

enum StudentStatus {
  ACTIVE
  INACTIVE
  GRADUATED
}

enum EnrollmentStatus {
  ENROLLED
  DROPPED
  COMPLETED
}

enum AttendanceStatus {
  PRESENT
  ABSENT
  LATE
  EXCUSED
}

enum NotificationType {
  GRADE_PUBLISHED
  ENROLLMENT_CONFIRMED
  ATTENDANCE_MARKED
  SCHEDULE_UPDATED
  SYSTEM_ANNOUNCEMENT
}

// User Model
model User {
  id                String    @id @default(uuid())
  email             String    @unique
  passwordHash      String    @map("password_hash")
  firstName         String    @map("first_name")
  lastName          String    @map("last_name")
  role              UserRole
  isActive          Boolean   @default(true) @map("is_active")
  createdAt         DateTime  @default(now()) @map("created_at")
  updatedAt         DateTime  @updatedAt @map("updated_at")

  student           Student?
  teachingStaff     TeachingStaff?
  nonTeachingStaff  NonTeachingStaff?
  notifications     Notification[]
  generatedQRCodes  QRCode[]
  markedAttendance  AttendanceRecord[] @relation("MarkedBy")
  enteredGrades     Grade[]

  @@map("users")
}

// Student Model
model Student {
  id              String        @id @default(uuid())
  userId          String        @unique @map("user_id")
  studentId       String        @unique @map("student_id")
  enrollmentDate  DateTime      @map("enrollment_date") @db.Date
  status          StudentStatus @default(ACTIVE)
  currentGPA      Decimal?      @map("current_gpa") @db.Decimal(3, 2)
  createdAt       DateTime      @default(now()) @map("created_at")
  updatedAt       DateTime      @updatedAt @map("updated_at")

  user            User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  enrollments     Enrollment[]

  @@map("students")
}

// Teaching Staff Model
model TeachingStaff {
  id            String   @id @default(uuid())
  userId        String   @unique @map("user_id")
  employeeId    String   @unique @map("employee_id")
  department    String
  hireDate      DateTime @map("hire_date") @db.Date
  position      String
  createdAt     DateTime @default(now()) @map("created_at")
  updatedAt     DateTime @updatedAt @map("updated_at")

  user          User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  classes       Class[]

  @@map("teaching_staff")
}

// Non-Teaching Staff Model
model NonTeachingStaff {
  id            String   @id @default(uuid())
  userId        String   @unique @map("user_id")
  employeeId    String   @unique @map("employee_id")
  department    String
  hireDate      DateTime @map("hire_date") @db.Date
  position      String
  createdAt     DateTime @default(now()) @map("created_at")
  updatedAt     DateTime @updatedAt @map("updated_at")

  user          User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("non_teaching_staff")
}

// Subject Model
model Subject {
  id          String   @id @default(uuid())
  code        String   @unique
  name        String
  credits     Int
  description String?  @db.Text
  isActive    Boolean  @default(true) @map("is_active")
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  classes     Class[]

  @@map("subjects")
}

// Class Model
model Class {
  id                String   @id @default(uuid())
  subjectId         String   @map("subject_id")
  teacherId         String   @map("teacher_id")
  classCode         String   @unique @map("class_code")
  semester          String
  academicYear      String   @map("academic_year")
  maxStudents       Int      @map("max_students")
  currentEnrollment Int      @default(0) @map("current_enrollment")
  room              String?
  schedule          String?
  createdAt         DateTime @default(now()) @map("created_at")
  updatedAt         DateTime @updatedAt @map("updated_at")

  subject           Subject       @relation(fields: [subjectId], references: [id])
  teacher           TeachingStaff @relation(fields: [teacherId], references: [id])
  enrollments       Enrollment[]
  classSessions     ClassSession[]

  @@map("classes")
}

// Enrollment Model
model Enrollment {
  id             String           @id @default(uuid())
  studentId      String           @map("student_id")
  classId        String           @map("class_id")
  enrollmentDate DateTime         @default(now()) @map("enrollment_date")
  status         EnrollmentStatus @default(ENROLLED)
  finalGrade     String?          @map("final_grade")
  finalScore     Decimal?         @map("final_score") @db.Decimal(5, 2)
  createdAt      DateTime         @default(now()) @map("created_at")
  updatedAt      DateTime         @updatedAt @map("updated_at")

  student           Student            @relation(fields: [studentId], references: [id])
  class             Class              @relation(fields: [classId], references: [id])
  grades            Grade[]
  attendanceRecords AttendanceRecord[]

  @@unique([studentId, classId])
  @@map("enrollments")
}

// Grade Model
model Grade {
  id             String    @id @default(uuid())
  enrollmentId   String    @map("enrollment_id")
  teacherId      String    @map("teacher_id")
  assessmentType String    @map("assessment_type")
  assessmentName String    @map("assessment_name")
  score          Decimal   @db.Decimal(5, 2)
  maxScore       Decimal   @map("max_score") @db.Decimal(5, 2)
  weight         Decimal   @db.Decimal(3, 2)
  letterGrade    String?   @map("letter_grade")
  gradedAt       DateTime  @map("graded_at")
  publishedAt    DateTime? @map("published_at")
  isPublished    Boolean   @default(false) @map("is_published")
  createdAt      DateTime  @default(now()) @map("created_at")
  updatedAt      DateTime  @updatedAt @map("updated_at")

  enrollment     Enrollment @relation(fields: [enrollmentId], references: [id])
  teacher        User       @relation(fields: [teacherId], references: [id])

  @@map("grades")
}

// Class Session Model
model ClassSession {
  id            String   @id @default(uuid())
  classId       String   @map("class_id")
  sessionDate   DateTime @map("session_date") @db.Date
  startTime     DateTime @map("start_time") @db.Time
  endTime       DateTime @map("end_time") @db.Time
  room          String?
  topic         String?
  isCancelled   Boolean  @default(false) @map("is_cancelled")
  createdAt     DateTime @default(now()) @map("created_at")
  updatedAt     DateTime @updatedAt @map("updated_at")

  class             Class              @relation(fields: [classId], references: [id])
  qrCodes           QRCode[]
  attendanceRecords AttendanceRecord[]

  @@map("class_sessions")
}

// QR Code Model
model QRCode {
  id               String       @id @default(uuid())
  classSessionId   String       @map("class_session_id")
  generatedBy      String       @map("generated_by")
  code             String       @unique
  validFrom        DateTime     @map("valid_from")
  validUntil       DateTime     @map("valid_until")
  isActive         Boolean      @default(true) @map("is_active")
  locationRequired Boolean      @default(false) @map("location_required")
  createdAt        DateTime     @default(now()) @map("created_at")

  classSession     ClassSession @relation(fields: [classSessionId], references: [id])
  generator        User         @relation(fields: [generatedBy], references: [id])

  @@map("qr_codes")
}

// Attendance Record Model
model AttendanceRecord {
  id             String           @id @default(uuid())
  enrollmentId   String           @map("enrollment_id")
  classSessionId String           @map("class_session_id")
  date           DateTime         @db.Date
  status         AttendanceStatus
  qrCodeUsed     String?          @map("qr_code_used")
  markedAt       DateTime         @map("marked_at")
  markedBy       String           @map("marked_by")
  locationData   Json?            @map("location_data")
  createdAt      DateTime         @default(now()) @map("created_at")
  updatedAt      DateTime         @updatedAt @map("updated_at")

  enrollment     Enrollment   @relation(fields: [enrollmentId], references: [id])
  classSession   ClassSession @relation(fields: [classSessionId], references: [id])
  markedByUser   User         @relation("MarkedBy", fields: [markedBy], references: [id])

  @@unique([enrollmentId, classSessionId])
  @@map("attendance_records")
}

// Notification Model
model Notification {
  id        String           @id @default(uuid())
  userId    String           @map("user_id")
  type      NotificationType
  title     String
  message   String           @db.Text
  isRead    Boolean          @default(false) @map("is_read")
  readAt    DateTime?        @map("read_at")
  createdAt DateTime         @default(now()) @map("created_at")

  user      User             @relation(fields: [userId], references: [id])

  @@map("notifications")
}